<Window x:Class="TimeTableEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeTableEditor"
        xmlns:Views="clr-namespace:TimeTableEditor.Views"
        mc:Ignorable="d"
        Title="TimeTableEditor" Height="450" Width="800" WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu>
            <MenuItem Header="File">
                <MenuItem Header="New TimeTable" Click="Menu_NewTimeTable"/>
                <Separator/>
                <MenuItem Header="Open TimeTable" Click="Menu_LoadTimeTable"/>
                <MenuItem Header="Save TimeTable" Click="Menu_SaveTimeTable" x:Name="Menu_Save" IsEnabled="False"/>
                <Separator/>
                <MenuItem Header="Open TimeTable-List" Click="Menu_LoadTimeTableList"/>
                <MenuItem Header="Save To List" Click="Menu_SaveTimeTableList" x:Name="Menu_SaveList" IsEnabled="False"/>
                <Separator/>
                <MenuItem Header="Close TimeTable" Click="Menu_CloseTimeTable" x:Name="Menu_CloseTT" IsEnabled="False"/>
                <Separator/>
                <MenuItem Header="Zip TimeTable" Click="Menu_Zip_TimeTable" x:Name="Menu_ZipTimeTable" IsEnabled="False" Visibility="Collapsed"/>
                <Separator/>
                <MenuItem Header="Close" Click="Close_Click"/>
            </MenuItem>
            <MenuItem Header="Pools" IsEnabled="False" x:Name="MenuItem_Pools">
                <MenuItem Header="New">
                    <MenuItem Header="Create Pool-File" Click="New_Pool_Click"/>
                    <MenuItem Header="Create Turntable Pool-File" Click="New_Turntable_Pool_Click"/>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Open" Click="Open_Pool_CLick"/>
            </MenuItem>
        </Menu>
        <Views:MainView Grid.Row="1" x:Name="MainView"/>       
    </Grid>
</Window>
